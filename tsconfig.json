{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,    
    "sourceMap": true,
    "baseUrl": ".",

    "allowJs": true,
    "outDir": "dist",

    "types": [
      "webpack-env"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost",
      "WebWorker"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx",
  
    "src/helper/*.js", "src/helper/WorkerHelper.js", "src/AlgoWorker/AlgorithmWorker.js", "src/AlgoWorker/index.js",
  ],
  "exclude": [
    "node_modules"
  ]
}
